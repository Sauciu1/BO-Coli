{
    "configurations": [
        {
            "name": "Streamlit Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}"
            ],
            "justMyCode": true,
            "stopOnEntry": false,
            "exceptionHandling": {
                "ignore": [
                    "streamlit.runtime.scriptrunner_utils.exceptions.RerunException"
                ]
            }
        }
    ]
}